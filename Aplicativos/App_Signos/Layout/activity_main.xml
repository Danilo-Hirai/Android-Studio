<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo"
    android:paddingLeft="30sp"
    android:paddingTop="30sp"
    android:paddingRight="30sp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="70sp"
            android:paddingRight="50sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dia de Nascimento:"
                android:textAlignment="center"
                android:textColor="@color/Maroon"
                android:textStyle="bold"
                android:textSize="14sp"
                app:fontFamily="sans-serif-black"/>

            <Spinner
                android:id="@+id/spinnerDia"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Maroon"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="70sp"
            android:paddingRight="50sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MÃªs de Nascimento:"
                android:textAlignment="center"
                android:textColor="@color/Maroon"
                android:textStyle="bold"
                android:textSize="14sp"
                app:fontFamily="sans-serif-black"/>

            <Spinner
                android:id="@+id/spinnerMes"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Maroon"
                android:textAlignment="center"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="50sp">

            <Button
                android:id="@+id/buttonEnviar"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@layout/botao_signo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20sp">

            <Button
                android:id="@+id/btnhoroscopo"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:onClick="horoscopo"
                android:background="@layout/botao_horoscopo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20sp"
            android:paddingBottom="10sp">

            <Button
                android:id="@+id/btnsaibamais"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:onClick="saibamais"
                android:background="@layout/botao_saibamais"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>